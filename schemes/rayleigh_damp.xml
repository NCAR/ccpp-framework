<?xml version='1.0' encoding='utf-8'?>
<scheme module="rayleigh_damp">
  <subroutine name="rayleigh_damp_init" />
  <subroutine name="rayleigh_damp_run">
    <var>
      <name>horizontal_loop_extent</name>
      <units>index</units>
      <id>im</id>
      <rank>0</rank>
      <type>integer</type>
      <description>horizontal loop extent</description>
      <kind>default</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>horizontal_dimension</name>
      <units>index</units>
      <id>ix</id>
      <rank>0</rank>
      <type>integer</type>
      <description>horizontal dimension</description>
      <kind>default</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>horizontal_loop_extent</name>
      <units>index</units>
      <id>iy</id>
      <rank>0</rank>
      <type>integer</type>
      <description>horizontal dimension</description>
      <kind>default</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>vertical_dimension</name>
      <units>index</units>
      <id>km</id>
      <rank>0</rank>
      <type>integer</type>
      <description>number of vertical layers</description>
      <kind>default</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>tendency_of_y_wind_due_to_physics</name>
      <units>m s-2</units>
      <id>A</id>
      <rank>2</rank>
      <type>real</type>
      <description>meridional wind tendency due to physics</description>
      <kind>kind_phys</kind>
      <intent>inout</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>tendency_of_x_wind_due_to_physics</name>
      <units>m s-2</units>
      <id>B</id>
      <rank>2</rank>
      <type>real</type>
      <description>zonal wind tendency due to physics</description>
      <kind>kind_phys</kind>
      <intent>inout</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>tendency_of_air_temperature_due_to_physics</name>
      <units>K s-1</units>
      <id>C</id>
      <rank>2</rank>
      <type>real</type>
      <description>air temperature tendency due to physics</description>
      <kind>kind_phys</kind>
      <intent>inout</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>x_wind</name>
      <units>m s-1</units>
      <id>u1</id>
      <rank>2</rank>
      <type>real</type>
      <description>zonal wind</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>y_wind</name>
      <units>m s-1</units>
      <id>v1</id>
      <rank>2</rank>
      <type>real</type>
      <description>meridional wind</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>time_step_for_physics</name>
      <units>s</units>
      <id>dt</id>
      <rank>0</rank>
      <type>real</type>
      <description>physics time step</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>specific_heat_of_dry_air_at_constant_pressure</name>
      <units>J kg-1 K-1</units>
      <id>cp</id>
      <rank>0</rank>
      <type>real</type>
      <description>specific heat of dry air at constant pressure</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>number_of_vertical_layers_for_radiation_calculations</name>
      <units>index</units>
      <id>levr</id>
      <rank>0</rank>
      <type>integer</type>
      <description>number of vertical layers for radiation calculations</description>
      <kind>default</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>surface_air_pressure</name>
      <units>Pa</units>
      <id>pgr</id>
      <rank>1</rank>
      <type>real</type>
      <description>surface pressure</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>air_pressure</name>
      <units>Pa</units>
      <id>prsl</id>
      <rank>2</rank>
      <type>real</type>
      <description>mid-layer pressure</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>pressure_cutoff_for_rayleigh_damping</name>
      <units>Pa</units>
      <id>prslrd0</id>
      <rank>0</rank>
      <type>real</type>
      <description>pressure level above which to apply Rayleigh damping</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
    <var>
      <name>time_scale_for_rayleigh_damping</name>
      <units>d</units>
      <id>ral_ts</id>
      <rank>0</rank>
      <type>real</type>
      <description>time scale for Rayleigh damping</description>
      <kind>kind_phys</kind>
      <intent>in</intent>
      <optional>F</optional>
    </var>
  </subroutine>
  <subroutine name="rayleigh_damp_finalize" />
</scheme>
